                        <ImageView fitHeight="36" fitWidth="36" preserveRatio="true">
                            <image>
                                <Image url="@assets/server_status_icons/icons8-wi-fi-100.png" />
                            </image>
                        </ImageView>
                        <ImageView fitHeight="36" fitWidth="36" preserveRatio="true">
                            <image>
                                <Image url="@assets/generic_icons/icons8-user-100.png" />
                            </image>
                        </ImageView>
                    </children>
                </HBox>
            </top>
            <center>
            <VBox>
               <children>
                        <StackPane prefHeight="360" prefWidth="520" style="-fx-background-color: linear-gradient(to bottom right, rgba(40,46,72,0.92), rgba(29,33,50,0.85)); -fx-background-radius: 36; -fx-padding: 48;">
