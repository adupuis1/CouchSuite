<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<StackPane prefHeight="800" prefWidth="1280" style="-fx-background-color: linear-gradient(to bottom right, #fdfdff 0%, #eef1ff 55%, #e4e9fb 100%);" stylesheets="@../application.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <BorderPane maxHeight="740" maxWidth="1220" prefHeight="740" prefWidth="1220" style="-fx-background-color: rgba(255,255,255,0.9); -fx-background-radius: 52; -fx-padding: 48 56;" styleClass="hub-pane">
            <top>
                <VBox spacing="28">
                    <children>
                        <HBox alignment="CENTER_LEFT" spacing="18">
                            <children>
                                <Button fx:id="controllerButton" styleClass="icon-button">
                                    <graphic>
                                        <ImageView fitHeight="34" fitWidth="34" preserveRatio="true">
                                            <image>
                                                <Image url="@assets/console_or_controller_icons/icons8-game-controller-100.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="userButton" styleClass="icon-button">
                                    <graphic>
                                        <ImageView fitHeight="34" fitWidth="34" preserveRatio="true">
                                            <image>
                                                <Image url="@assets/generic_icons/icons8-user-100.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button fx:id="wifiButton" styleClass="icon-button">
                                    <graphic>
                                        <ImageView fx:id="wifiIcon" fitHeight="34" fitWidth="34" preserveRatio="true">
                                            <image>
                                                <Image url="@assets/server_status_icons/icons8-wi-fi-100.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Region HBox.hgrow="ALWAYS" />
                                <Button fx:id="settingsButton" styleClass="ghost-button" text="Settings" />
                                <Button fx:id="signInButton" styleClass="ghost-button" text="Sign In" />
                                <Button fx:id="createButton" styleClass="ghost-button" text="Create User" />
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="24">
                            <children>
                                <StackPane prefHeight="140" prefWidth="140" style="-fx-background-color: rgba(0,0,0,0.05); -fx-background-radius: 44;">
                                    <children>
                                        <ImageView fx:id="headerGlyph" fitHeight="72" fitWidth="72" preserveRatio="true">
                                            <image>
                                                <Image url="@assets/generic_icons/icons8-user-100.png" />
                                            </image>
                                        </ImageView>
                                    </children>
                                </StackPane>
                                <VBox alignment="CENTER_LEFT" spacing="16">
                                    <children>
                                        <Label styleClass="connect-title" text="hub" />
                                        <HBox fx:id="tabs" alignment="CENTER_LEFT" spacing="18">
                                            <children>
                                                <ToggleButton fx:id="homeTab" styleClass="hub-tab" text="home" />
                                                <ToggleButton fx:id="gamingTab" styleClass="hub-tab" text="gaming" />
                                                <ToggleButton fx:id="tvTab" styleClass="hub-tab" text="tv" />
                                            </children>
                                        </HBox>
                                    </children>
                                </VBox>
                            </children>
                        </HBox>
                        <HBox alignment="CENTER" spacing="10">
                            <children>
                                <Circle radius="6" styleClass="indicator-dot" />
                                <Circle radius="6" styleClass="indicator-dot" />
                                <Circle radius="6" styleClass="indicator-dot-active" />
                            </children>
                        </HBox>
                        <Label fx:id="offlineBadge" managed="false" styleClass="offline-badge" text="Offline cache" visible="false" />
                    </children>
                </VBox>
            </top>
            <center>
                <StackPane>
                    <children>
                        <ScrollPane fitToHeight="true" fitToWidth="false" hbarPolicy="NEVER" pannable="false" styleClass="hub-scroll" vbarPolicy="NEVER">
                            <content>
                                <HBox alignment="TOP_CENTER" spacing="32">
                                    <children>
                                        <StackPane prefHeight="480" prefWidth="1040">
                                            <children>
                                                <VBox alignment="TOP_LEFT" spacing="32">
                                                    <children>
                                                        <StackPane prefHeight="220" style="-fx-background-color: linear-gradient(to right, rgba(32,36,52,0.95), rgba(21,23,34,0.88)); -fx-background-radius: 36; -fx-padding: 36;">
                                                            <children>
                                                                <VBox spacing="12">
                                                                    <children>
                                                                        <Label style="-fx-text-fill: #f2f4ff;" styleClass="section-title" text="Top picks" />
                                                                        <Label style="-fx-text-fill: rgba(242,244,255,0.78);" styleClass="user-select-presence" text="Keep playing right where you left off" />
                                                                        <HBox spacing="14">
                                                                            <children>
                                                                                <Button styleClass="primary-button" text="Continue" />
                                                                                <Button styleClass="ghost-button" text="View Library" />
                                                                            </children>
                                                                        </HBox>
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </StackPane>
                                                        <VBox fx:id="contentColumns" spacing="24" />
                                                    </children>
                                                </VBox>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="480" prefWidth="1040">
                                            <children>
                                                <VBox alignment="TOP_LEFT" spacing="32">
                                                    <children>
                                                        <StackPane prefHeight="220" style="-fx-background-color: linear-gradient(to right, rgba(53,74,110,0.92), rgba(24,33,52,0.88)); -fx-background-radius: 36; -fx-padding: 36;">
                                                            <children>
                                                                <VBox spacing="12">
                                                                    <children>
                                                                        <Label style="-fx-text-fill: #f2f4ff;" styleClass="section-title" text="Gaming" />
                                                                        <Label style="-fx-text-fill: rgba(242,244,255,0.78);" styleClass="user-select-presence" text="Browse your catalog and ready installs" wrapText="true" />
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </StackPane>
                                                        <VBox spacing="16">
                                                            <children>
                                                                <Label styleClass="section-title" text="Recently installed" />
                                                                <Label styleClass="user-select-presence" text="Your installs will appear here." />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </StackPane>
                                        <StackPane prefHeight="480" prefWidth="1040">
                                            <children>
                                                <VBox alignment="TOP_LEFT" spacing="32">
                                                    <children>
                                                        <StackPane prefHeight="220" style="-fx-background-color: linear-gradient(to right, rgba(53,86,110,0.9), rgba(33,46,64,0.88)); -fx-background-radius: 36; -fx-padding: 36;">
                                                            <children>
                                                                <VBox spacing="12">
                                                                    <children>
                                                                        <Label style="-fx-text-fill: #f2f4ff;" styleClass="section-title" text="TV" />
                                                                        <Label style="-fx-text-fill: rgba(242,244,255,0.78);" styleClass="user-select-presence" text="Link your streaming apps for instant launch" wrapText="true" />
                                                                    </children>
                                                                </VBox>
                                                            </children>
                                                        </StackPane>
                                                        <VBox spacing="16">
                                                            <children>
                                                                <Label styleClass="section-title" text="Continue watching" />
                                                                <Label styleClass="user-select-presence" text="TV recommendations coming soon." />
                                                            </children>
                                                        </VBox>
                                                    </children>
                                                </VBox>
                                            </children>
                                        </StackPane>
                                    </children>
                                </HBox>
                            </content>
                        </ScrollPane>
                        <VBox fx:id="serverErrorPane" alignment="CENTER" managed="false" spacing="16" styleClass="server-error-pane" visible="false">
                            <children>
                                <Label fx:id="serverErrorMessage" styleClass="server-error-message" text="Server unavailable" />
                                <Button fx:id="serverErrorRetry" styleClass="primary-button" text="Retry" />
                            </children>
                        </VBox>
                    </children>
                </StackPane>
            </center>
            <bottom>
                <Label fx:id="status" styleClass="status-bar" text="Idle" />
            </bottom>
        </BorderPane>
    </children>
</StackPane>
