<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane xmlns="http://javafx.com/javafx/20" xmlns:fx="http://javafx.com/fxml/1" visible="false" managed="false" styleClass="overlay-layer">
    <children>
        <VBox spacing="16" alignment="CENTER_LEFT" styleClass="overlay-card">
            <children>
                <Label text="Server Settings" styleClass="overlay-title" />
                <Label text="Host" />
                <TextField fx:id="hostInput" prefWidth="320" promptText="Server host (e.g., 192.168.4.229:8080)" />
                <Label fx:id="offlineLabel" text="Offline cache is active" styleClass="overlay-subtitle" visible="false" managed="false" />
                <HBox spacing="12">
                    <children>
                        <Button fx:id="applyButton" text="Apply" styleClass="primary-button" />
                        <Button fx:id="refreshButton" text="Refresh" styleClass="ghost-button" />
                        <Button fx:id="closeButton" text="Close" styleClass="ghost-button" />
                    </children>
                </HBox>
            </children>
            <padding>
                <Insets top="32" right="32" bottom="32" left="32" />
            </padding>
        </VBox>
    </children>
</StackPane>
