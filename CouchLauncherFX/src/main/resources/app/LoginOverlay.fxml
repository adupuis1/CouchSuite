<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<StackPane managed="false" styleClass="overlay-layer" stylesheets="@../application.css" visible="false" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <VBox alignment="CENTER_LEFT" spacing="16" styleClass="overlay-card" stylesheets="@../application.css">
            <children>
                <Label text="Account" />
                <TextField fx:id="usernameField" promptText="Username" />
                <PasswordField fx:id="passwordField" promptText="Password" />
                <Label fx:id="statusLabel" styleClass="status-message" text=" " />
                <HBox spacing="12">
                    <children>
                        <Button fx:id="primaryButton" styleClass="primary-button" text="Sign In" />
                        <Button fx:id="closeButton" styleClass="ghost-button" text="Close" />
                    </children>
                </HBox>
                <Button fx:id="secondaryButton" styleClass="ghost-button" text="Create Account Instead" />
            </children>
            <padding>
                <Insets bottom="32" left="32" right="32" top="32" />
            </padding>
        </VBox>
    </children>
</StackPane>
